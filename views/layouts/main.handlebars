<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />

    <title>Expenses Tracker</title>

    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css'
      integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/css/style.css' />

    {{!-- need to download chart.js before rendering code of {{{body}}} --}}
    <script src='https://cdn.jsdelivr.net/npm/chart.js'></script>
  </head>

  <body>
    <header class='container-fluid ps-4 py-2 m-0'>
      <div class='row'>
        <div
          class='col col-12 col-sm-12 col-md-6 d-flex d-md-block justify-content-center'
        >
          <a
            href='/'
            class='back-button fs-1 fw-bold text-decoration-none text-white'
          > üí∞ Expenses Tracker</a>
        </div>
        <div
          class='col col-12 col-sm-12 col-md-6 d-flex justify-content-center justify-content-md-end align-items-center'
        >
          <nav
            class='d-flex flex-column flex-md-row align-items-md-center me-4'
          >
            {{#if loggedIn}}
              <a
                class='btn fs-5 text-decoration-none text-white'
                id='add'
                href='/transactions/add'
              >Add Transaction</a>
              <a
                class='btn fs-5 text-decoration-none text-white'
                id='view'
                href='/transactions'
              >View Transaction</a>
              <div class='dropdown d-flex justify-content-center'>
                <button
                  class='btn btn-light btn-sm dropdown-toggle fs-6'
                  type='button'
                  data-bs-toggle='dropdown'
                  aria-expanded='false'
                >
                  üôè Hello!
                  {{username}}
                </button>
                <ul class='dropdown-menu'>
                  <li>
                    <button
                      class='btn dropdown-item fs-5 text-decoration-none'
                      id='logout'
                    >Logout</button>
                  </li>
                </ul>
              </div>
            {{else}}
              <a
                href='/login'
                class='btn fs-5 text-decoration-none text-white'
              >Login</a>
            {{/if}}
          </nav>
        </div>
      </div>
    </header>
    <main class='container-fluid mt-4'>
      {{{body}}}
    </main>
    {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}
    <script
      src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js'
    ></script>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL'
      crossorigin='anonymous'
    ></script>
  </body>
</html>